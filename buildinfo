distName='Common'
distType='lib'
cppver = 'c++14'

-- [=[ GLEW
-- as long as Common holds gl.h, it will need this too
-- however the glewInit isn't called until GLApp
-- so that's where the lib dependency is inserted
-- which makes this all a mess.
if platform == 'msvc' then
	-- set this global here.  GLApp will pick it up.
	GLEWDir = os.getenv'USERPROFILE'..'\\include'
	include:insert(GLEWDir)
end
--]=]
